@model QuizMVC.Models.Quiz.Question

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="QuestionType" class="control-label"></label>
                <select asp-for="QuestionType" 
                        asp-items="@(new SelectList(ViewBag.message, "Id", 
                                       "Type"))"></select>
                <span asp-validation-for="QuestionType" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Tables" asp-controller="Questions" asp-action="Index">Back to List</a>
</div>