@model IEnumerable<QuizMVC.Models.Quiz.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>


<a asp-area="Tables" asp-controller="Categories" asp-action="Create">Add New</a> 
<hr/>
<div class="table-container">
    <table class="table table-bordered table-hover" id="categories">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(c => c.Id)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Description)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@Html.DisplayFor(c => category.Id)</td>
                <td>@Html.DisplayFor(c => category.Name)</td>
                <td>@Html.DisplayFor(c => category.Description)</td>
                <td>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary m-1 ms-1">Edit</a>           
                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" class="btn btn-success m-1 ms-1">Details</a>      
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger m-1 ms-1">Delete</a>  
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>