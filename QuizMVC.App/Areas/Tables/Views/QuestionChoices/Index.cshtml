@model IEnumerable<QuizMVC.Models.Quiz.QuestionChoice>

@{
    ViewData["Title"] = "Question Choice";
}

<h1>Question Choice</h1>

<div class="table-container">
    <table class="table table-bordered table-hover" id="question-choice">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(qc => qc.Id)
            </th>
            <th>
                Question Text
            </th>
            <th>
                @Html.DisplayNameFor(qc => qc.Choice)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var questionChoice in Model)
        {
            <tr>
                <td>@Html.DisplayFor(qc => questionChoice.Id)</td>
                <td>@Html.DisplayFor(qc => questionChoice.Question.QuestionText)</td>
                <td>@Html.DisplayFor(qc => questionChoice.Choice)</td>
                <td>
                    <a asp-controller="QuestionChoices" asp-action="Edit" asp-route-id="@questionChoice.Id" class="btn btn-primary m-1 ms-1">Edit</a>           
                    <a asp-controller="QuestionChoices" asp-action="Details" asp-route-id="@questionChoice.Id" class="btn btn-success m-1 ms-1">Details</a>       
                    <a href="#"  class="btn btn-danger m-1 ms-1">Delete</a>     
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>